{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tailscale ACL Policy Configuration",
  "description": "Schema for Tailscale tailnet policy file (v2). Supports grants, ACLs, SSH, postures, tags, autoApprovers, tests, sshTests, and more. Grants are the recommended approach.",
  "type": "object",
  "properties": {
    "acls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "action",
          "src",
          "dst"
        ],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "accept"
            ]
          },
          "src": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "dst": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "proto": {
            "type": "string",
            "enum": [
              "igmp",
              "ipv4",
              "ip-in-ip",
              "tcp",
              "egp",
              "igp",
              "udp",
              "gre",
              "esp",
              "ah",
              "sctp"
            ]
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    },
    "ssh": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "action",
          "src",
          "dst"
        ],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "accept",
              "check"
            ]
          },
          "src": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "dst": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "users": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 0
          },
          "checkPeriod": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    },
    "hosts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "minProperties": 0
    },
    "groups": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "minProperties": 0
    },
    "tagOwners": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "minProperties": 0
    },
    "autoApprovers": {
      "type": "object",
      "properties": {
        "routes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "minProperties": 0
        },
        "exitNode": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false,
      "minProperties": 0
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "grants": [
        {
          "src": [
            "group:engineering"
          ],
          "dst": [
            "tag:webserver"
          ],
          "ip": [
            "*"
          ]
        }
      ],
      "ssh": [
        {
          "action": "check",
          "src": [
            "autogroup:member"
          ],
          "dst": [
            "autogroup:self"
          ],
          "users": [
            "autogroup:nonroot"
          ]
        }
      ],
      "hosts": {
        "db-server": "100.64.0.5"
      },
      "groups": {
        "group:engineering": [
          "alice@example.com",
          "bob@example.com"
        ]
      },
      "tagOwners": {
        "tag:webserver": [],
        "tag:prod": [
          "group:sre"
        ]
      },
      "autoApprovers": {
        "routes": {
          "192.168.1.0/24": [
            "group:network-admin"
          ]
        },
        "exitNode": [
          "tag:exit-node-allowed"
        ]
      }
    }
  ]
}